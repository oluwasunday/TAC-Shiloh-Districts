@model TACShilohDistricts.Core.ViewModel.ContactsViewModel
@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

<div class="content-2">
    <div class="recent-payments">
        <div class="title">
            <h2>Recent Message</h2>
            <a href="#" class="btn">View All</a>
        </div>
        <table>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
            @foreach (var contact in Model.Contacts)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.Email</td>
                    <td>@contact.Subject</td>
                    <td>@contact.Message</td>
                    <td>
                        <span>
                            <a href="">
                                <i class="bi bi-pencil-square" style="color: #000"></i>&nbsp;
                            </a>
                            <a href="">
                                <i class="bi bi-trash3-fill" style="color: #f00"></i>
                            </a>
                        </span>
                    </td>
                </tr>
            }

        </table>
    </div>
    
</div>

